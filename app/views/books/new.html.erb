<h1> Upload a new book! </h1>

<%= form_for @book do |f| %>
  <% if @book.errors.any? %>
  <div class= "error_messages">
    <h2> Form is invalid </h2>
    <ul>
      <% for message in @book.errors.full_messages %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author_first, "Author's First Name" %>
    <%= f.text_field :author_first %>
  </div>
  <div class="field">
    <%= f.label :author_last, "Author's Last Name" %>
    <%= f.text_field :author_last %>
  </div>
  <div class="field">
    <%= f.label :description, "Summary" %>
    <%= f.text_field :description %>
<!--   </div> -->
<!--   <div class="image">
    <%#= f.label :photo, "Upload an image of your product!" %>
    <%#= f.file_field :photo %>
    <%#= f.hidden_field :photo_cache %> 
<!</div> --> 
 
  <div class= "actions"><%=f.submit %></div>
<% end %>